<h1>Edit your review for <%= @review.game.name %></h1>

<form method="POST" action="/reviews/<%= @review.id %>">
  <input type="hidden" id="hidden" name="_method" value="PATCH">
  Review: <input type="text" value="<%= @review.message %>" name="message">
  <br><br>
  <input type="submit" value="Update">
</form>

<a href="/games/<%= @review.game.id %>"><input type="button" value="Cancel"></a>

<br>

<% if session[:email] %>
  <% user = User.find_by(:email => session[:email]) %>
  <p>
    Logged in as <a href="/users/<%= user.id %>"><%= user.name %></a><br>
    <a href="/logout">Logout</a>
  </p>
<% else %>
  <p>
    <%= "You are not logged in."%> <br>
    <a href="/login">Login</a> <br>
    <a href="/signup">Sign up</a> <br>
  </p>
<% end %>